<div>

<div>
<h1>All Users</h1> 

<br> 

<% if current_user %>
<%= button_to "Sign-out" , destroy_user_session_path, method: :delete %> 
<% elsif %>
Already a user?
<%= link_to "Sign-in" , new_user_session_path %> 
| 
New User?
<%= link_to "Sign-up" , new_user_registration_path %>
<% end %>

</div>

<% @users.each do |user| %>
    <p>
    <strong>Name:</strong>
    <%= user.name %>
    </p>

    <p>
    <strong>Email:</strong>
    <%= user.email %>
    </p>

    <p>
        <strong>Address:</strong>
        <%= user.address %>
    </p>

    <p>
        <strong>Phone:</strong>
        <%= user.phone %>
    </p>

    <%= link_to("Show User", user_path(user.id)) %>
    <hr>

<% end %>

<br><br>
<%= link_to "Search By Id", "users/search" %>
<br><br>
<%= link_to "New user", new_user_path %>

</div>